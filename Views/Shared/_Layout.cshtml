<body class="d-flex flex-column min-vh-100">
    @if (User.Identity.IsAuthenticated)
    {
<header class="sticky-top">
    <nav class="navbar navbar-expand-md navbar-light bg-light border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Homework" asp-action="Index">
                <img src="~/images/Logo.svg" alt="" width="55" height="40" class="d-inline-block align-text-top">
                <p class="m-0">EasySchool</p>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a class="nav-link text-dark">Hi, @User.Identity.Name!</a>
                    </li>
                    @if (User.IsInRole("User"))
                    {
    <li class="nav-item">
        <a class="nav-link text-dark @Html.ActiveClass("Attendee", "MyAccount")" asp-area="" asp-controller="Attendee" asp-action="MyAccount">My Account</a>
    </li>
}

                    @if (User.IsInRole("Trainer"))
                    {
    <li class="nav-item">
        <a class="nav-link text-dark @Html.ActiveClass("Attendee", "Index")" asp-area="" asp-controller="Attendee" asp-action="Index">Attendees</a>
    </li>
}
                    <li class="nav-item">
                        <a class="nav-link text-dark @Html.ActiveClass("Homework", "Index")" asp-area="" asp-controller="Homework" asp-action="Index">Homeworks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>}

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
