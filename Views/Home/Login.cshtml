@model WebApplicationForDidacticPurpose.MODELS.RegisterAndLoginModels.LoginUserEntity

@{ ViewData["Title"] = "Home Page"; }

<div class="d-flex flex-column align-items-center justify-content-center text-center my-5">
    <h1 class="p-2 m-2 login-header">EasySchool</h1>
    <p class="p-1 m-2 w-75">A place where you can manage your attendees.</p>
</div>

<section class="container-fluid d-flex align-items-center justify-content-center">
    <div class="row d-flex flex-md-row flex-column align-items-center justify-content-evenly g-2">

        <div class="col-6 order-md-1 order-2 p-3">
            <div class="text-center">
                <img src="~/images/home-page-image.svg" class="rounded img-fluid mx-auto d-block" height="500" width="500" alt="..." />

            </div>
        </div>

        <div class="col-6 order-1 p-3">
            <form asp-controller="Home" asp-action="Login" method="post">

                <div asp-validation-for="Email" class="form-floating mb-3">
                    <input type="email" asp-for="Email" class="form-control" placeholder="Email" />
                    <label asp-for="Email"></label>
                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    <span class="text-danger">@Html.ValidationMessageFor(a => a.Email)</span>
                </div>

                <div asp-validation-for="Password" class="form-floating mb-3">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                    <label asp-for="Password"></label>
                    <span class="text-danger">@Html.ValidationMessageFor(a => a.Password)</span>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col">
                        <button type="submit" class="btn btn-primary form-control">Login</button>
                    </div>
                    <div class="col">
                        <a asp-action="Register" class="btn btn-success form-control">Register</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</section>


