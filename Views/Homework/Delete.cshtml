@model WebApplicationForDidacticPurpose.DAL.Models.HomeworkEntity


@{ ViewData["Title"] = "Delete"; }

<div class="d-flex flex-column align-items-center justify-content-center text-center mb-3">
    <h1 class="my-5">@Model.Name - Homework</h1>
</div>

<h3>Are you sure you want to delete this?</h3>

<div class="card">
    <div class="card-body">
        <div class="row">
            <div id="training-info" class="col-4">
                <ul class="list-group">
                    <li class="list-group-item"><b>Name: </b>@Html.DisplayFor(model => model.Name)</li>
                    <li class="list-group-item"><b>Duration:</b> @Model.Deadline.ToString("dd/MM/yyyy")</li>
                </ul>
                <!-- Buttons -->

                <form asp-action="Delete">
                    <input type="hidden" asp-for="HomeworkId" />
                    <div class="row mt-2 mx-0 p-0">
                        <div class="col p-0 me-2">
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-danger form-control" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                Delete
                            </button>
                        </div>
                        <div class="col p-0">
                            <a class="btn btn-secondary form-control" asp-action="Index" role="button">Return to list</a>
                        </div>
                    </div>
                    <!-- Modal -->
                    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteModalLabel">Are you sure you want to delete this homework?</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    @Model.Name
                                </div>
                                <div class="modal-footer">
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
            <div class="col-8">
                <b>Description:</b>
                <div>@Html.DisplayFor(model => model.Description)</div>
            </div>
        </div>
    </div>
</div>